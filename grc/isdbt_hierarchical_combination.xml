<?xml version="1.0"?>
<block>
  <name>Hierarchical Combination</name>
  <key>isdbt_hierarchical_combination</key>
  <category>ISDBT</category>
  <import>import isdbt</import>
  <make>isdbt.hierarchical_combination($mode, $segments_a, $segments_b, $segments_c)</make>

    <param>
      <name>Transmission Mode</name>
    <key>mode</key>
    <value>2</value>
    <type>enum</type>
      <option>
      <name>MODE1(2K)</name>
      <key>1</key>
      </option>
    <option>
      <name>MODE2(4K)</name>
      <key>2</key>
    </option>
    <option>
      <name>MODE3(8K)</name>
      <key>3</key>
    </option>
  </param> 

  <param>
      <name>Layer A Segments</name>
      <key>segments_a</key>
      <value>1</value>
      <type>int</type>
  </param>

   <param>
      <name>Layer B Segments</name>
      <key>segments_b</key>
      <value>6</value>
      <type>int</type>
  </param>

  <param>
      <name>Layer C Segments</name>
      <key>segments_c</key>
      <value>6</value>
      <type>int</type>
  </param>

  <sink>
    <name>in0</name>
    <type>complex</type>
    <vlen>1*192</vlen>
  </sink>
  <sink>
    <name>in1</name>
    <type>complex</type>
    <vlen>6*192</vlen>
  </sink>
  <sink>
    <name>in2</name>
    <type>complex</type>
    <vlen>6*192</vlen>
  </sink>
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>13*192</vlen>
  </source>
</block>
